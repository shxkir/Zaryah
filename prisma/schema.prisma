// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile?

  // Messages relationships
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  // Posts relationship
  posts Post[]

  // Housing listings relationship
  housingListings HousingListing[]

  // Finance watchlist relationship
  financeWatchlist FinanceWatchlist[]

  @@map("users")
}

model Profile {
  id                    String   @id @default(uuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Basic Information
  name                  String
  age                   Int
  profilePicture        String?  // URL or base64 string for profile picture
  profilePictureUrl     String?  // Alternative field for profile picture URL
  bio                   String?  // Short bio/description

  // Education & Career
  educationLevel        String
  occupation            String

  // Learning Preferences
  learningGoals         String
  subjects              String[]
  learningStyle         String
  previousExperience    String

  // Strengths & Challenges
  strengths             String
  weaknesses            String
  specificChallenges    String

  // Time & Motivation
  availableHoursPerWeek Int      @default(5)
  learningPace          String   @default("Medium")
  motivationLevel       String   @default("Medium")

  // Location Information
  city                  String?
  state                 String?
  country               String?
  latitude              Float?
  longitude             Float?
  locationPrivacy       String   @default("everyone") // "everyone", "connections", "private"

  // Connections relationships
  connectionsInitiated Connection[] @relation("UserConnections")
  connectionsReceived  Connection[] @relation("ConnectedUserConnections")

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("profiles")
  @@index([city])
  @@index([country])
}

model Message {
  id         String   @id @default(uuid())
  text       String
  senderId   String
  receiverId String
  sender     User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())

  @@map("messages")
  @@index([senderId])
  @@index([receiverId])
  @@index([createdAt])
}

model Post {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  caption    String?
  imageUrl   String
  latitude   Float?
  longitude  Float?
  city       String?
  country    String?
  privacy    String   @default("everyone") // "everyone", "connections", "private"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("posts")
  @@index([userId])
  @@index([createdAt])
  @@index([country])
}

model HousingListing {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title        String
  monthlyPrice Float
  locality     String
  fullAddress  String
  latitude     Float
  longitude    Float
  images       String[]
  contactInfo  String
  bedrooms     Int?
  bathrooms    Int?
  squareFeet   Int?
  propertyType String   @default("apartment")
  amenities    String[]
  description  String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("housing_listings")
  @@index([userId])
  @@index([locality])
  @@index([monthlyPrice])
  @@index([isActive])
  @@index([createdAt])
}

model FinanceWatchlist {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol    String
  assetType String
  exchange  String?
  createdAt DateTime @default(now())

  @@map("finance_watchlist")
  @@unique([userId, symbol])
  @@index([userId])
  @@index([assetType])
}

model Connection {
  id          String   @id @default(uuid())
  userId      String
  connectedId String
  user        Profile  @relation("UserConnections", fields: [userId], references: [id], onDelete: Cascade)
  connected   Profile  @relation("ConnectedUserConnections", fields: [connectedId], references: [id], onDelete: Cascade)
  status      String   @default("pending") // "pending", "accepted", "rejected"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("connections")
  @@unique([userId, connectedId])
  @@index([userId])
  @@index([connectedId])
  @@index([status])
}
